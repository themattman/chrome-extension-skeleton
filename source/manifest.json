{
    "name": "Link Rewriter",
    "description": "Redirect Youtube links to Youtubeonrepeat",
    "version": "0.1",
    "manifest_version": 2,
    "content_scripts": [
		{
		   "matches": [
				"https://www.youtube.com/watch?*"
		    ],
		    "js": [
				"redirecter.js"
		    ]
		}
    ],
    "browser_action": {
    	"default_icon": "icon.png"
    },
    "background": {
		"scripts": [
	    	"background.js"
		]
    },
    "icons": {
    	"16": "icon.png",
    	"48": "icon.png",
    	"128": "icon.png"
    },
    "permissions": [
    	"tabs"
    ]
}
